@model IEnumerable<BursUI.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutListele.cshtml";
}
<h3 style="background-color: #212529; border-color: #32383e; color: #fff;margin-bottom:0px;border-spacing: 0px;border-color: #32383e;">Öğrenciler</h3>
<table class="table table-striped table-dark" style="margin-top:0px;border-spacing: 0px;border-color: #32383e">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(x => x.BursRole == "BursAlan"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.ActionLink("Burs Ver", "Details", new { id = item.Id }) |
                    @Html.ActionLink("İletişime geç", "KisiGuncelle", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<h3 style="background-color: #212529; border-color: #32383e; color: #fff;margin-bottom:0px;border-spacing: 0px;border-color: #32383e;">Burs Verenler</h3>
<table class="table" style="margin-top:0px;border-spacing: 0px;border-color: #32383e">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(x => x.BursRole == "BursVeren"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.ActionLink("Bas Vur", "Details", new { id = item.Id }) |
                    @Html.ActionLink("İletişime geç", "KisiGuncelle", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
