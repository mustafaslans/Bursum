@model IEnumerable<BursUI.Entities.BasvuruForm>

@{
    ViewBag.Title = "ProfilBursVeren";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<table class="table table-striped table-dark" style="margin-top:0px;border-spacing: 0px;border-color: #32383e; border-top:none;margin-bottom:0rem">
    <thead>
        <tr>
            <th style="border-bottom: 0px solid #dee2e6"></th>
            <th style="border-bottom: 0px solid #dee2e6"></th>
            <th style="border-bottom: 0px solid #dee2e6"></th>
            <th style="border-bottom: 0px solid #dee2e6"></th>
            <th style="background-color: #212529; border-color: #32383e; color: #fff;margin-bottom:0px;border-spacing: 0px;border-color: #32383e; text-align:right;border-bottom: 0px solid #dee2e6">
                Başvuran Kişiler
            </th>
        </tr>
        <tr>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Ad</th>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Soyad</th>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Doğum Tarihi</th>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Tc No</th>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Okul</th>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Bölüm</th>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Aile Aylık Gelir</th>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DogumTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TcNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Okul)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bolum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AileAylik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=@("#detaylar"+item.BasvuruFormID)>
                        Detaylar
                    </button>
                    @Html.ActionLink("İletişime Geç", "MessageCreate", new { id = item.BasvuranID })
                </td>
            </tr>
        }
    </tbody>
</table>

@foreach (var item in Model)
{
    <div class="modal fade" id=@("detaylar"+item.BasvuruFormID) tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <form method="post" action="">
                    @{
                        Html.RenderAction("Detaylar", "Home", new { id = item.BasvuruFormID });
                    }
                </form>
            </div>
        </div>
    </div>
}

