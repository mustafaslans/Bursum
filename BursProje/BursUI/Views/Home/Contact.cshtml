@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutContact.cshtml";
}
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8 mb-5">
                <form action="#" class="p-5 bg-white">
                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="font-weight-bold" for="fullname">Adınız Soyadınız</label>
                            <input type="text" id="fullname" class="form-control" placeholder="Adınız Soyadınız">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="font-weight-bold" for="email">Email</label>
                            <input type="email" id="email" class="form-control" placeholder="Email Adresiniz">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="font-weight-bold" for="phone">Telefon</label>
                            <input type="text" id="phone" class="form-control" placeholder="Telefon Numaranız">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="font-weight-bold" for="message">Mesajınız</label>
                            <textarea name="message" id="message" cols="30" rows="5" class="form-control" placeholder="İletilmesi istediğiniz mesajı yazınız"></textarea>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Mesajı yolla" class="btn btn-primary pill px-4 py-2">
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-4">
                <div class="p-4 mb-3 bg-white">
                    <h3 class="h5 text-black mb-3">İletişim Bilgileri</h3>
                    <p class="mb-0 font-weight-bold">Adres</p>
                    <p class="mb-4">Ömerli Mah. Terme Sk. Arnavutköy, İstanbul, Türkiye</p>
                    <p class="mb-0 font-weight-bold">Telefon</p>
                    <p class="mb-4"><a href="#">+90 555 555 55 55</a></p>
                    <p class="mb-0 font-weight-bold">Email Adresi</p>
                    <p class="mb-0"><a href="#">must.aslan@outlook.com</a></p>
                </div>
                <div class="p-4 mb-3 bg-white">
                    <h3 class="h5 text-black mb-3">Ekstra</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa ad iure porro mollitia architecto hic consequuntur. Distinctio nisi perferendis dolore, ipsa consectetur? Fugiat quaerat eos qui, libero neque sed nulla.</p>
                    <p><a href="#" class="btn btn-primary px-4 py-2 text-white pill">Dahası...</a></p>
                </div>
            </div>
        </div>
    </div>
</div>