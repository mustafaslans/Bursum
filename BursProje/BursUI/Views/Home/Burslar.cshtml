@model IEnumerable<BursUI.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutListele.cshtml";
}
<table class="table table-striped table-dark" style="margin-top:0px;border-spacing: 0px;border-color: #32383e; border-top:none;margin-bottom:0rem" >
    <thead>
        <tr>
            <th style="border-bottom: 0px solid #dee2e6"></th>
            <th style="border-bottom: 0px solid #dee2e6"></th>
            <th style="background-color: #212529; border-color: #32383e; color: #fff;margin-bottom:0px;border-spacing: 0px;border-color: #32383e; align-content:center;border-bottom: 0px solid #dee2e6"">
                Öğrenciler
            </th>
        </tr>
        <tr>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Ad</th>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col">Soyad</th>
            <th style="border-top: 0px solid #dee2e6;border-bottom: 0px solid #dee2e6" scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(x => x.BursRole == "BursAlan"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.ActionLink("Burs Ver", "Details", new { id = item.Id }) |
                    @Html.ActionLink("İletişime geç", "KisiGuncelle", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>